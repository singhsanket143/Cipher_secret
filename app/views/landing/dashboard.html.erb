        padding: 3.25rem;
      }
      .button.large a {
        color: white;
        font-size: 1.75rem;
        font-weight: 100;
        margin-top: 2rem;
      }

      /* Card design - back */
      .panel i {
        font-size: 2rem;
        display: block;
        float: left;
        width: 20%;
        opacity: 0.5;
      }
      .panel a,
      .panel p,
